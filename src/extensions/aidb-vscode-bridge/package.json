{
  "name": "aidb-vscode-bridge",
  "displayName": "AIDB VS Code Bridge",
  "description": "Bridge extension for AIDB to execute VS Code tasks and handle launch.json features",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "aidb",
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-debugger-inc/aidb",
    "directory": "src/extensions/aidb-vscode-bridge"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:aidb.executeTask",
    "onCommand:aidb.getTaskList",
    "onCommand:aidb.executeLaunchConfig",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aidb.executeTask",
        "title": "AIDB: Execute Task"
      },
      {
        "command": "aidb.getTaskList",
        "title": "AIDB: Get Task List"
      },
      {
        "command": "aidb.executeLaunchConfig",
        "title": "AIDB: Execute Launch Configuration"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "25.x",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^3.7.0"
  }
}
