{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "pytest: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "test_sample.py",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "pytest: Debug Single Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "test_sample.py::test_simple_assertion",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
