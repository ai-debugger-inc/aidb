{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: Debug Server",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port",
        "5000"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Flask: Debug View",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port",
        "5001"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
