{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Debug Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "${env:APP_PORT:8000}",
        "--noreload"
      ],
      "django": true,
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Django: Debug View",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "${env:APP_PORT:8001}",
        "--noreload"
      ],
      "django": true,
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
