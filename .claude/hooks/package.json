{
    "name": "aidb-claude-hooks",
    "version": "1.0.0",
    "description": "TypeScript hooks for AIDB Claude Code skill auto-activation",
    "private": true,
    "type": "module",
    "scripts": {
        "check": "tsc --noEmit",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --config ../../.github/linters/prettierrc.json --write '**/*.ts'",
        "format:check": "prettier --config ../../.github/linters/prettierrc.json --check '**/*.ts'",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "test:integration": "tsx skill-activation-prompt.ts < test-input.json"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.71.0",
        "@types/node": "^24.10.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.46.4",
        "eslint": "^9.39.2",
        "prettier": "^3.7.4",
        "vitest": "^4.0.8"
    }
}
